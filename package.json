{
  "name": "@we-are-singular/eslint-config",
  "version": "2.1.0",
  "description": "singular eslint stuff",
  "main": "dist/main.cjs",
  "module": "dist/main.mjs",
  "types": "types.d.ts",
  "files": [
    "dist/**",
    "types.d.ts",
    "all.js"
  ],
  "scripts": {
    "build": "rollup -c",
    "release": "release-it"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/we-are-singular/eslint-config.git"
  },
  "author": "singular",
  "license": "MIT",
  "homepage": "https://github.com/we-are-singular/eslint-config#readme",
  "bugs": {
    "url": "https://github.com/we-are-singular/eslint-config/issues"
  },
  "dependencies": {
    "@types/eslint": "^8",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "deepmerge": "^4.3.1",
    "eslint": "^8",
    "eslint-config-next": "15.2.4",
    "eslint-config-prettier": "^10.1.1",
    "eslint-config-turbo": "latest",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-filename-rules": "^1.3.1",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-markdown": "^5.1.0",
    "eslint-plugin-mdx": "^3.3.1",
    "eslint-plugin-monorepo": "^0.3.2",
    "eslint-plugin-prettier": "^5.2.5",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-storybook": "^0.12.0",
    "eslint-plugin-testing-library": "^7.1.1",
    "eslint-plugin-vitest": "^0.5.4",
    "eslint-plugin-vitest-globals": "^1.5.0",
    "eslint-plugin-yml": "^1.17.0",
    "typescript": ">=5"
  },
  "devDependencies": {
    "@rollup/plugin-virtual": "^3.0.2",
    "eslint": "^8.57.0",
    "prettier": "^3.5.3",
    "release-it": "^18.1.2",
    "rollup": "^4.38.0",
    "rollup-plugin-prettier": "^4.1.2"
  },
  "peerDependencies": {
    "eslint": ">=8<9",
    "typescript": ">=5"
  },
  "release-it": {
    "hooks": {
      "before:init": [
        "git pull -r",
        "npm run build"
      ],
      "after:bump": "npx auto-changelog -p"
    },
    "git": {
      "requireBranch": "main",
      "commitMessage": "Release: ${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": true
    }
  }
}
