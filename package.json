{
  "name": "@we-are-singular/eslint-config",
  "version": "3.0.2",
  "description": "singular eslint stuff",
  "type": "module",
  "main": "dist/main.cjs",
  "module": "dist/main.mjs",
  "types": "types.d.ts",
  "exports": {
    ".": {
      "import": "./dist/main.mjs",
      "require": "./dist/main.cjs",
      "types": "./types.d.ts"
    }
  },
  "files": [
    "dist/**",
    "types.d.ts"
  ],
  "scripts": {
    "build": "rollup -c",
    "release": "release-it"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/we-are-singular/eslint-config.git"
  },
  "author": "singular",
  "license": "MIT",
  "homepage": "https://github.com/we-are-singular/eslint-config#readme",
  "bugs": {
    "url": "https://github.com/we-are-singular/eslint-config/issues"
  },
  "dependencies": {
    "eslint": "^9.25.1",
    "eslint-config-next": "15.3.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-config-turbo": "latest",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-filename-rules": "^1.3.1",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-markdown": "^5.1.0",
    "eslint-plugin-mdx": "^3.4.1",
    "eslint-plugin-monorepo": "^0.3.2",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-storybook": "^0.12.0",
    "eslint-plugin-testing-library": "^7.1.1",
    "eslint-plugin-vitest": "^0.5.4",
    "eslint-plugin-vitest-globals": "^1.5.0",
    "eslint-plugin-yml": "^1.17.0",
    "globals": "^16.3.0",
    "typescript": ">=5",
    "typescript-eslint": "^8.38.0"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "release-it": "^19.0.1",
    "rollup": "^4.40.0"
  },
  "peerDependencies": {
    "typescript": ">=5"
  },
  "release-it": {
    "hooks": {
      "before:init": [
        "git pull -r",
        "npm run build"
      ],
      "after:bump": "npx auto-changelog -p"
    },
    "git": {
      "requireBranch": "eslint9",
      "commitMessage": "Release: ${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": true
    }
  }
}
